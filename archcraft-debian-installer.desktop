[Desktop Entry]
Name=Debian → Archcraft Full Installer
Comment=Transform your Debian system into Archcraft Openbox style (Full Install)
Exec=bash -c '# =========================================
#!/bin/bash
# =======================================================
# Debian → Archcraft Openbox Full Installer (Single-File)
# Part 1 of 4
# Author: Seyed Adrian Saberifar
# =======================================================
log() { echo -e "[INFO] $1"; }
err() { echo -e "[ERROR] $1"; }

# ------------------ Helper Functions ------------------
ensure_pkg() {
    local pkg=$1
    if ! dpkg -s "$pkg" &>/dev/null; then
        log "Installing missing package: $pkg"
        sudo apt -y install "$pkg"
    else
        log "$pkg already installed, skipping..."
    fi
}

# ------------------ Essential Packages ------------------
ESSENTIALS=(sudo wget git curl unzip xz tar build-essential cmake make meson ninja-build python3 python3-tk xprintidle zenity)
for pkg in "${ESSENTIALS[@]}"; do
    ensure_pkg "$pkg"
done

# ------------------ Component Selection ------------------
COMPONENTS=$(zenity --list --checklist \
  --title="Select components to install" \
  --text="Choose what to install" \
  --column="Install" --column="Component" \
  TRUE "Openbox + Plank" \
  TRUE "XFCE utilities" \
  TRUE "Themes + Fonts" \
  TRUE "Flatpak + Flathub" \
  TRUE "Snap" \
  TRUE "Homebrew" \
  TRUE "Limine EFI" \
  TRUE "Screensaver (username flying text idle-time)" \
  --separator=",")

IFS=',' read -ra SELECTION <<< "$COMPONENTS"

# ------------------ Start Zenity Progress Bar ------------------
(
PERCENT=0
increment() { PERCENT=$((PERCENT+$1)); echo "$PERCENT"; }
echo "$PERCENT"  # start at 0

update() { 
    echo "# $1"; 
    PERCENT=$(increment $2)
    echo "$PERCENT"
}

update "Updating package lists..." 5
sudo apt update -y || err "Failed apt update"

update "Installing essentials..." 5
for pkg in "${ESSENTIALS[@]}"; do
    ensure_pkg "$pkg"
done

# ------------------ Optional Components ------------------
for item in "${SELECTION[@]}"; do
    case $item in
        "Openbox + Plank")
            update "Installing Openbox + Plank..." 10
            sudo apt -y install xorg openbox obconf plank || true
            ;;
        "XFCE utilities")
            update "Installing XFCE utilities..." 10
            sudo apt -y install xfce4 xfce4-goodies alacritty rofi nitrogen feh neofetch kitty pcmanfm || true
            ;;
        "Themes + Fonts")
            update "Installing Themes and Fonts..." 5
            sudo apt -y install adwaita-icon-theme arc-theme papirus-icon-theme fonts-ubuntu ttf-font-awesome || true
            ;;
        "Flatpak + Flathub")
            update "Installing Flatpak + Flathub..." 5
            if ! command -v flatpak &>/dev/null; then
                sudo apt -y install flatpak
                sudo flatpak remote-add --if-not-exists flathub https://flathub.org/repo/flathub.flatpakrepo || true
            else
                log "Flatpak already installed, skipping..."
            fi
            ;;
        "Snap")
            update "Installing Snap..." 5
            if [[ ! -d "/var/lib/snapd" ]]; then
                sudo apt -y install snapd
                sudo systemctl enable --now snapd.socket
                sudo ln -s /var/lib/snapd/snap /snap 2>/dev/null || true
            else
                log "Snap already installed, skipping..."
            fi
            ;;
        "Homebrew")
            update "Installing Homebrew..." 7
            if [[ ! -d "/home/linuxbrew/.linuxbrew" ]]; then
                NONINTERACTIVE=1 /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
                eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv 2>/dev/null || echo '')"
            else
                log "Homebrew already installed, skipping..."
            fi
            ;;
        "Limine EFI")
            update "Installing Limine EFI bootloader..." 5
            if [[ ! -f "/boot/efi/limine-install.sh" ]] && [[ -d /boot/efi ]]; then
                LIMINE_URL=$(curl -s https://api.github.com/repos/limine-bootloader/limine/releases/latest \
                  | grep browser_download_url | grep x86_64-linux | cut -d '"' -f 4)
                wget -O ~/limine.zip "$LIMINE_URL"
                unzip ~/limine.zip -d ~/limine
                cd ~/limine
                sudo ./limine-install.sh
            else
                log "Limine EFI already installed or /boot/efi missing, skipping..."
            fi
            ;;
        "Screensaver (username flying text idle-time)")
            update "Setting up flying username screensaver..." 5
            # Prompt for inactivity timeout
            while true; do
                SC_TIMEOUT=$(zenity --entry --title="Screensaver Timeout" \
                  --text="Enter inactivity timeout in minutes:" --entry-text="5")
                if [ $? -ne 0 ]; then
                    zenity --info --text="Screensaver setup skipped."
                    break
                fi
                if [[ "$SC_TIMEOUT" =~ ^[0-9]+$ ]] && [ "$SC_TIMEOUT" -gt 0 ]; then
                    mkdir -p ~/.config/archcraft-screensaver
                    echo "$SC_TIMEOUT" > ~/.config/archcraft-screensaver/config
                    break
                else
                    zenity --error --text="Invalid input. Enter a positive number."
                fi
            done

            mkdir -p ~/bin
            cat > ~/bin/username_flying_text.py <<'EOF'
#!/usr/bin/env python3
import tkinter as tk, random, os

root = tk.Tk()
root.attributes("-fullscreen", True)
root.configure(bg='black')
texts = []
colors = ['red','green','blue','yellow','cyan','magenta','white']
width = root.winfo_screenwidth()
height = root.winfo_screenheight()
username = os.environ.get("USER")

for i in range(20):
    txt = tk.Label(root, text=f"{username}\non Archcraft", fg=random.choice(colors),
                   bg='black', font=("Courier", random.randint(20,40)), justify='center')
    txt.place(x=random.randint(0,width), y=random.randint(0,height))
    dx = random.choice([-3,-2,-1,1,2,3])
    dy = random.choice([-3,-2,-1,1,2,3])
    texts.append((txt, dx, dy))

def move():
    for i, (lbl, dx, dy) in enumerate(texts):
        x = lbl.winfo_x() + dx
        y = lbl.winfo_y() + dy
        if x < 0 or x > width-200: dx *= -1
        if y < 0 or y > height-100: dy *= -1
        lbl.place(x=x, y=y)
        texts[i] = (lbl, dx, dy)
    root.after(50, move)

move()
root.mainloop()
EOF
            chmod +x ~/bin/username_flying_text.py

            mkdir -p ~/.config/systemd/user
            cat > ~/.config/systemd/user/archcraft-screensaver.service <<'EOF'
[Unit]
Description=Archcraft flying username screensaver (idle-time)

[Service]
Type=simple
ExecStart=/bin/bash -c '
CONFIG="$HOME/.config/archcraft-screensaver/config"
while true; do
    IDLE_MS=$(xprintidle)
    IDLE_MIN=$(cat "$CONFIG")
    THRESHOLD=$((IDLE_MIN*60*1000))
    if [ "$IDLE_MS" -ge "$THRESHOLD" ]; then
        ~/bin/username_flying_text.py
    fi
    sleep 5
done
'
Restart=always
EOF
            systemctl --user daemon-reload
            systemctl --user enable --now archcraft-screensaver.service
            ;;
    esac
done

# ------------------ Dotfiles, Wallpapers, Plank ------------------
update "Setting up Archcraft dotfiles and autostart..." 5
mkdir -p ~/.config
if [[ ! -d ~/archcraft-openbox ]]; then
    git clone https://github.com/archcraft-os/archcraft-openbox.git ~/archcraft-openbox
fi
cp -r ~/archcraft-openbox/files/* ~/.config/ || true

mkdir -p ~/.config/autostart
cat > ~/.config/autostart/plank.desktop <<EOL
[Desktop Entry]
Type=Application
Exec=plank
Hidden=false
NoDisplay=false
X-GNOME-Autostart-enabled=true
Name=Plank
Comment=Start Plank dock
EOL

mkdir -p ~/Pictures/Wallpapers
cp -r ~/archcraft-openbox/files/wallpapers/* ~/Pictures/Wallpapers/ || true
fc-cache -fv

# ------------------ Cleanup ------------------
update "Cleaning up..." 5
sudo apt -y autoremove
sudo apt -y clean

echo "100"
echo "# Installation Complete!"
) |
zenity --progress \
  --title="Archcraft Debian Installer" \
  --text="Starting installation..." \
  --percentage=0 \
  --auto-close \
  --width=550

zenity --info --title="Installation Complete" --text="Debian → Archcraft Openbox transformation is complete!\nReboot to start your GUI."

'
log "Installer finished successfully."
Icon=system-software-install
Terminal=true
Type=Application
Categories=System;Installer;
StartupNotify=true


